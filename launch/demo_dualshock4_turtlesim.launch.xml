<launch>

    <!-- run the turtlesim node -->
    <node name="turtlesim" pkg="turtlesim" exec="turtlesim_node">
        <!-- to make the turtlesim omnidirectional -->
        <param name="holonomic" value="true" />
    </node>

    <!-- run the joy node for the dualshock 4 -->
    <node name="joy_node" pkg="joy" exec="joy_node">
        <param from="$(find-pkg-share unified_teleop)/config/example_scheme.yaml" />
    </node>

    <!-- run the cmd_vel_mirror_joystick node -->
    <node name="cmd_vel_mirror_joystick_node" pkg="unified_teleop" exec="cmd_vel_mirror_joystick">
        <param from="$(find-pkg-share unified_teleop)/config/example_scheme.yaml" />
        <param name="input_device_config" value="example_mapping" />
        <remap from="cmd_vel" to="turtle1/cmd_vel" />
    </node>

</launch>